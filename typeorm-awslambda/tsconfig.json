{
   "compilerOptions": {
      "lib": [
         "es2017"
      ],
      "typeRoots": [
         "node_modules/@types"
       ],
       "types": [
         "node"
       ],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist", 
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true
   }
}